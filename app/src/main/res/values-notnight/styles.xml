<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ImageViewStyle">
        <item name="android:tint">@color/light_gray_icon</item>
    </style>

    <style name="RecyclerViewStyleMainPizza">
        <item name="android:background">@color/light_gray_filters_background_main</item>
    </style>

    <style name="FiltersStyleMainPizza">
        <item name="android:backgroundTint">@color/light_white_filter_main</item>
    </style>

    <style name="RecyclerViewStyleMainPizzaList">
        <item name="android:background">@color/light_purple_card</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/light_white_button_greeting</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:backgroundTint">@color/light_white_edit_text_reg</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
        <item name="android:padding">@dimen/value_10_dp</item>
    </style>

    <style name="ButtonEnterStyle">
        <item name="android:backgroundTint">@color/light_gray_button_greeting</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonRegStyle">
        <item name="android:backgroundTint">@color/light_white_button_greeting</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RectangleStyleGreeting">
        <item name="android:textSize">@dimen/value_16_sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MenuStyle">
        <item name="android:backgroundTint">@color/light_purple_element_menu</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="RecyclerViewStocks">
        <item name="android:background">@color/light_purple_card</item>
    </style>

    <style name="RecyclerViewStyleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
    </style>

    <style name="RecyclerViewSmallText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/value_12_sp</item>
    </style>

    <style name="RedButtonStyle">
        <item name="backgroundTint">@color/light_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
    </style>

    <style name="RadioButtonStyleFirst">
        <item name="backgroundTint">@color/light_gray_ellipse_greeting</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
        <item name="android:checked">false</item>
        <item name="android:padding">@dimen/value_16_dp</item>
        <item name="android:text">@string/size_price_plug</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <style name="RadioButtonStyleSecond">
        <item name="backgroundTint">@color/light_gray_ellipse_greeting</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
        <item name="android:checked">false</item>
        <item name="android:padding">@dimen/value_16_dp</item>
        <item name="android:text">@string/dough_plug</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <style name="NavBottomIconColorStyle">
        <item name="itemIconTint">@color/light_gray_line_reg</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchViewStyle">
        <item name="android:layout_marginStart">@dimen/value_16_dp</item>
        <item name="android:layout_marginEnd">@dimen/value_16_dp</item>
    </style>

    <style name="LinearLayoutSettingsStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/value_16_dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:longClickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:gravity">start|center</item>
        <item name="android:paddingBottom">@dimen/value_16_dp</item>
    </style>

    <style name="AutoCompleteTextViewStyle">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
        <item name="android:padding">@dimen/value_10_dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>